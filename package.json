{
  "name": "vmdom",
  "version": "0.0.23",
  "description": "Lightweight browser implementation for Node's VM.",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "nodely -s ./src -o ./lib && npm run gen-types",
    "gen-types": "flow-copy-source src -i \".+/__tests__/.+\" lib",
    "postpublish": "codecov",
    "prepublishOnly": "npm run build",
    "test": "lintly src && flow && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dogma-io/vmdom.git"
  },
  "keywords": [
    "document",
    "dom",
    "machine",
    "virtual",
    "vm",
    "window"
  ],
  "author": "Matthew Dahl <https://github.com/dogma-io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dogma-io/vmdom/issues"
  },
  "homepage": "https://github.com/dogma-io/vmdom#readme",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "7.0.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "23.4.2",
    "babel-preset-nodely": "0.3.0",
    "codecov": "3.0.4",
    "flow-copy-source": "2.0.2",
    "jest": "23.5.0",
    "lintly": "0.3.0",
    "nodely": "0.8.0"
  },
  "dependencies": {
    "node-fetch": "^2.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/__tests__/**/*.js"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95.31,
        "functions": 98.29,
        "lines": 97.15,
        "statements": 97.15
      }
    },
    "setupTestFrameworkScriptFile": "<rootDir>/jest-setup.js",
    "testRegex": "/__tests__/.*-test\\.js$"
  }
}
